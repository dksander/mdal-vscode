{
    "name": "mdal",
    "displayName": "mdAL",
    "description": "Language Extension adding support for mdAL",
    "version": "0.0.0",
    "publisher": "joneug",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/joneug/mdal-extension.git"
    },
    "bugs": {
        "url": "https://github.com/joneug/mdal-extension/issues"
    },
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:mdal"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "mdal",
                "aliases": [
                    "mdAL"
                ],
                "extensions": [
                    ".mdal"
                ],
                "configuration": "./mdal.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mdal",
                "scopeName": "text.mdal",
                "path": "./syntaxes/mdal.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "mdal.a.proxy",
                "title": "mdAL Command A"
            },
            {
                "command": "mdal.b",
                "title": "mdAL Command B"
            }
        ]
    },
    "devDependencies": {
        "typescript": "^3.8.3",
        "@types/node": "^14.0.1"
    },
    "dependencies": {
        "@types/vscode": "^1.45.0",
        "vsce": "^1.75.0",
        "vscode-languageclient": "^6.1.3"
    },
    "scripts": {
        "prepare": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src"
    }
}
