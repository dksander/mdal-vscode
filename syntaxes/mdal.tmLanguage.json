{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.mdal",
	"name": "mdAL",
	"fileTypes": ["mdal"],
	"patterns": [
		{
			"name": "keyword.control.mdal",
			"match": "(?<=[^\\w-]|^)(solution|master|supplemental|documentHeader|documentLine|journal|field|fields)(?=[^\\w-]|$)"
		},
		{
			"name": "keyword.other.mdal",
			"match": "(?<=[^\\w-]|^)(true|false|Address|ContactInfo|Dimensions|BigInteger|Blob|Boolean|Code|Date|DateTime|Decimal|Enum|Guid|Integer|Text|Time)(?=[^\\w-]|$)"
		},
		{
			"name": "string.quoted.single.mdal",
			"begin": "'",
			"end": "'"
		},
		{
			"name": "comment.line.mdal",
			"match": "//.+"
		}
	]
}
