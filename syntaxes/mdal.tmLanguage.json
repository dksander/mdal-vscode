{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.mdal",
	"name": "mdAL",
	"fileTypes": ["mdal"],
	"patterns": [
		{
			"name": "keyword.control.mdal",
			"match": "(?<=[^\\w\"'-]|^)(solution|master|supplemental|document|header|line|journal|field|fields|template|include)(?=[^\\w\"'-]|$)"
		},
		{
			"name": "keyword.other.mdal",
			"match": "(?<=[^\\w\"'-]|^)(true|false|Boolean|Integer|BigInteger|Decimal|Code|Text|Date|Time|DateTime|Guid|Blob|Enum|Option|Media|MediaSet|DateFormula|Duration|RecordId|TableFilter)(?=[^\\w\"'-]|$)"
		},
		{
			"name": "string.quoted.single.mdal",
			"begin": "'",
			"end": "'"
		},
		{
			"name": "comment.line.mdal",
			"match": "//.+"
		}
	]
}
